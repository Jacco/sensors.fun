<script>
  //Retreive all the visitors from the database
  function getNames(){
    $.get("./api/sensor1/data")
        .done(function(data) {
          if(data.length > 0) {
            var jsonPretty = JSON.stringify(data, null, '\t');

            $('#databaseNames pre').html(jsonPretty);
          }
        });
  }

  //Call getNames on page load.
  $(document).ready(function() {
    getNames();

  });
</script>